<html>

  <body>

    {{!-- <h2>all plants</h2> --}}

    <div class="row row-cols-1 row-cols-md-3 row-cols-lg-4 row-cols-xl-5 g-4">
      {{#each plantList}}
        <div class="col">
          <a href="/plants/{{this.id}}" class="card-link">
            <div class="main-card">
              <img
                src="{{this.image}}"
                alt="{{this.name}}"
                class="card-img-top"
              />
              <div class="card-body">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">Difficulty: {{this.difficulty}}</p>
              </div>
            </div>
          </a>
        </div>

      {{/each}}
    </div>
  </body>

</html>